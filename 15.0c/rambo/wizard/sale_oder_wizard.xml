<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_oder_wizard" model="ir.ui.view">
        <field name="name">sale wizard</field>
        <field name="model">sale.wizard</field>
        <field name="arch" type="xml">
            <form string="Parameters">
                <group>
                    <group>
                        <field name="customer_id"/>
                        <field name="customer_email_id"/>
                    </group>
                    <group>
                        <field name="sale_person"/>
                        <field name="sale_person_contact"/>
                        <field name="payment_term"/>
                    </group>
                </group>
                <footer>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="sale_oder_wizard" model="ir.actions.act_window">
        <field name="name">sale_oder_wizard</field>
        <field name="res_model">sale.wizard</field>
<!--                <field name="view_id" ref="view_sale_oder_wizard"/>-->
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

