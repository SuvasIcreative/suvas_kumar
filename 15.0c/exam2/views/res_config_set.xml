<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="install_model_in_res_config" model="ir.ui.view">
            <field name="name">Install_model</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//div[hasclass('settings')]" position="inside">

                    <div class="app_settings_block" data-string="Exam" string="Exam" data-key="exam2">
                        <h2>Install Model</h2>

                        <div class="row mt16 o_settings_container">

                            <div class="o_setting_left_pane">
                                <field name="module_crm"/>
                            </div>

                            <div class="o_setting_right_pane">
                                <label string="Exam" for="module_crm"/>
                                <div class="text-muted">
                                    Here, U can  install model
                                </div>
                            </div>

                        </div>


                        <h2>Sale Model</h2>

                        <div class="row mt16 o_settings_container">

                            <div class="o_setting_left_pane">
                                <field name="current_month_sale_oder_id" />
                            </div>

                            <div class="o_setting_right_pane">
                                <label string="Sale data" for="current_month_sale_oder_id"/>
<!--                                <div class="text-muted">-->
<!--                                </div>-->
                            </div>

                        </div>
                    </div>
                </xpath>

            </field>
        </record>
    </data>
</odoo>












