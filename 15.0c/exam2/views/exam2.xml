<odoo>
    <data>
        <!--        form views-->
        <record id="view_exam_form" model="ir.ui.view">
            <field name="name">exam_form</field>
            <field name="model">exam.exam</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- explicit list view definition -->
        <record id="exam_tree" model="ir.ui.view">
            <field name="name">exam_tree</field>
            <field name="model">exam.exam</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="exam_action_window">
            <field name="name">exam window</field>
            <field name="res_model">exam.exam</field>
            <field name="view_mode">tree,form,kanban</field>
        </record>


        <menuitem name="exam" id="exam_menu_root"/>

        <menuitem id="exam_menu_1" name="exam2" parent="exam_menu_root" action="exam_action_window"/>

    </data>
</odoo>