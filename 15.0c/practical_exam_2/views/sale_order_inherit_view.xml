<odoo>
    <record id="view_sale_order_form_inherit" model="ir.ui.view">
        <field name="name">view_order_form_modify</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_cancel']" position="after">
                <button string="Apply Promotional Discount" name="action_apply_promotional_discount" type="object"
                        class="oe_highlight" domain="[('promotional_discount','=','True')]"
                        attrs="{'invisible': [ref('base.promotional_discount' ,'=', False)]}"/>
            </xpath>
        </field>
    </record>
</odoo>