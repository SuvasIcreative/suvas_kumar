<odoo>
    <record id="view_sale_order_form_inherit" model="ir.ui.view">
        <field name="name">view_order_form_modify</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_cancel']" position="after">
                <button string="Apply Promotional Discount" name="action_apply_promotional_discount" type="object"
                        class="oe_highlight" attrs="{'invisible': [('promotional_discount_check', '=', False)]}"/>
            </xpath>
            <group name="sale_header" position="inside">
                <group name="promotional_discount">
                    <field name="promotional_discount_check" invisible='1'/>
                </group>
            </group>

        </field>
    </record>
</odoo>