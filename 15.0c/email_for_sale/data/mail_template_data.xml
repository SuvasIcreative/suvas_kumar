<odoo>
    <data>
        <record id="email_template_sale_order" model="mail.template">
            <field name="name">Send Quotations : Send by email</field>
            <field name="model_id" ref="email_for_sale.model_sale_order"/>
            <field name="email_from">{{ (object.user_id.email_formatted) }}</field>
            <!--            <field name="email_to">{{ object.partner_id.email}}</field>-->
            <field name="email_to">dhruv.shah@icreativetechnolabs.com</field>
            <field name="subject">Send Quotations confirm</field>
            <field name="body_html" type="html">
                <div style="margin: 10px;">
                    <p style="margin: 5px; font-size: 13px;">
                        Dear,
                        <t t-if="object.partner_id.name">
                            <t t-esc="object.partner_id.name"/>
                        </t>
                        <br/>
                        <br/>
                        Your Order is Confirm as per bellow details..
                        <br/>
                        <br/>

                        <table class="table table-sm o_main_table">
                            <tr>
                                <th name="th_product" class="text-left">Product</th>
                                <th name="th_description" class="text-left">Description</th>
                                <th name="th_unit" class="text-left">Unit</th>
                                <th name="th_price" class="text-left">Tax</th>
                                <th name="th_price" class="text-left">Price</th>
                            </tr>

                            <t t-foreach="object.order_line" t-as="order_id">
                                <tr>
                                    <td>
                                        <span t-field="order_id.product_id.name"/>
                                    </td>
                                    <td>
                                        <span t-field="order_id.name"/>
                                    </td>
                                    <td>
                                        <span t-field="order_id.product_uom_qty"/>
                                    </td>
                                    <td>
                                        <span t-field="order_id.tax_id"/>
                                    </td>
                                    <td>
                                        <span t-field="order_id.price_subtotal"/>
                                    </td>

                                </tr>
                            </t>
                            <tfoot>
                                <tr>
                                    <td>Total Amount to pay:</td>
                                    <td>
                                        <td>
                                            <td>
                                                <td>
                                                    <span t-field="object.amount_total"/>
                                                </td>
                                            </td>
                                        </td>
                                    </td>
                                </tr>
                            </tfoot>

                        </table>


                    </p>

                    <p style="margin: 5px; font-size: 13px;" class="text-right">
                        Thank you for perchase
                    </p>
                </div>
            </field>
            <field name="report_name">Send Quotations{{ (object.partner_id)}}</field>
        </record>
    </data>
</odoo>