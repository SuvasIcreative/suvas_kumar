<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_student_management_kanban" model="ir.ui.view">
        <field name="name">student.management.kanban.view</field>
        <field name="model">student.management</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="email"/>
                <field name="mobile_no"/>
                <field name="address"/>
                <field name="enrollment_number"/>
                <field name="date_of_birth"/>
                <field name="gender"/>
                <field name="college"/>
                <field name="course_info_id"/>
                <field name="image_1999"/>
                <templates style="background-color:#008000">
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img alt="Avatar"
                                     t-att-src="kanban_image('student.management', 'image_1999',record.id.raw_value)"/>
                            </div>
                            <div class="oe_kanban_details">
                                <t class="o_kanban_record_title">
                                    Name:
                                    <strong t-esc="record.first_name.value"/>
                                    <t class="o_kanban_record_title">
                                        <strong t-esc="record.last_name.value"/>
                                    </t>
                                </t>
                                <div t-if="record.date_of_birth.value">
                                    Date Of Birth:
                                    <t t-esc="record.date_of_birth.value"/>
                                </div>
                                <div t-if="record.gender.value">
                                    Gender:
                                    <t t-esc="record.gender.value"/>
                                </div>
                                <div t-if="record.email.value">
                                    Email:
                                    <t t-esc="record.email.value"/>
                                </div>
                                <div t-if="record.college.value">
                                    College:
                                    <t t-esc="record.college.value"/>
                                </div>
                                <div t-if="record.course_info_id.value">
                                    Course:
                                    <t t-esc="record.course_info_id.value"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!--    tree view-->
    <record id="student_tree" model="ir.ui.view">
        <field name="name">student management tree</field>
        <field name="model">student.management</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" readonly="1"/>
                <field name="first_name"/>
                <field name="last_name"/>
                <!--                <field name="date_of_birth" widget="date"/>-->
                <field name="gender"/>
                <field name="email" widget="email"/>
                <field name="enrollment_number"/>
                <!--                <field name="address"/>-->
                <field name="course_id"/>
                <field name="mobile_no" widget="phone"/>
                <field name="reference" widget="many2one_avatar" options="{'color_field':'color'}"/>
                <field name="college"/>
                <field name="state" decoration-success="state == 'draft' or state == 'confirm'"
                       decoration-info="state == 'complete' or state == 'cancel'"
                       widget="badge" optional="show"/>
            </tree>
        </field>
    </record>

    <!--form views-->
    <record id="student_form" model="ir.ui.view">
        <field name="name">student.management.form</field>
        <field name="model">student.management</field>
        <field name="arch" type="xml">
            <form string="Action">
                <header>

                    <button id='button_draft' string="draft" states="cancel" name="action_draft"
                            class="btn-primary" type="object"/>
                    <button id='button_confirm' string="Confirm" states="draft" name="action_confirm"
                            class="btn-primary" confirm="Your form going to confirm" type="object"/>
                    <button id='button_complete' string="Complete" states="confirm" name="action_complete"
                            class="btn-primary" type="object"/>
                    <button id='button_cancel' string="Cancel" states="draft,confirm,complete" name="action_cancel"
                            confirm="Are u want to cancel your form" type="object"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,confirm,complete"/>

                    <!--                    <button name="College_management.action_procurement_compute" string="Send" type="action"/>-->

                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <field name="image_1999" widget="image" class="oe_avatar"
                                   options="{&quot;preview_image&quot;: &quot;avatar_128&quot;}"/>
                    <group>
                        <group>
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="date_of_birth" widget="date"/>
                            <field name="gender" widget="radio"/>
                            <field name="enrollment_number"/>
                        </group>
                        <group>
                            <field name="address"/>
                            <field name="mobile_no" widget="phone"/>
                            <field name="course_id" invisible="1"/>
                            <field name="course_info_id" context="{'suvas': college}"/>
                            <!--                            <field name="yy"/>-->
                            <field name="email" widget="email"/>
                            <!--                            <field name="reference" options="{'no_create':'True'}"/>-->
                            <field name="reference" options="{'no_open':'True'}" context="{'Nikhar': True}"/>
                            <!--                            <field name="reference" options="{'no_create_edit':'True'}" />-->
                            <!--                            <field name="reference" widget="selection" />-->
                            <field name="college"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>

                </div>
            </form>
        </field>
    </record>
    <!--    search views-->
    <record id="student_management_search" model="ir.ui.view">
        <field name="name">student_management</field>
        <field name="model">student.management</field>
        <field name="arch" type="xml">
            <search string="Student">
                <field name="course_id"/>
                <field name="email"/>
                <field name="state"/>
                <separator/>
                <filter string="Male" name="gender" domain="[('gender', '=', 'male')]"/>
                <filter string="Female" name="gender" domain="[('gender', '=', 'female')]"/>
                <filter string="Other" name="gender" domain="[('gender', '=', 'other')]"/>
                <filter string="Draft" name="state" domain="[('state', '=', 'draft')]"/>
                <filter string="Cancel" name="state" domain="[('state', '=', 'cancel')]"/>
                <filter string="Complete" name="state" domain="[('state', '=', 'complete')]"/>
                <filter string="Confirm" name="state" domain="[('state', '=', 'confirm')]"/>

                <!--                <separator/>-->
                <group expand="1" string="Group By">
                    <filter string="Status" name="state" context="{'group_by':'state'}"/>
                    <filter string="Course" name="course_id" context="{'group_by':'course_id'}"/>
                    <filter string="gender" name="gender" context="{'group_by':'gender'}"/>
                    <filter string="College" name="college" context="{'group_by':'college'}"/>
                </group>
            </search>
        </field>
    </record>

    <!--    action views-->
    <record id="student_action_window" model="ir.actions.act_window">
        <field name="name">student</field>
        <field name="res_model">student.management</field>
        <field name="view_mode">tree,form,kanban</field>

        <!--                <field name="context">{"search_default_filter_to_course": 1}</field>-->
    </record>
    <record id="student_action_form_window" model="ir.actions.act_window">
        <field name="name">student</field>
        <field name="res_model">student.management</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="student_form"/>
        <!--        <field name="context">{'search_default_college':'college'}</field>-->
    </record>


    <!--man manu-->
    <!--    <menuitem id="student_root" name="student"/>-->

    <!--    manus-->

    <menuitem id="student_root" name="Student" parent='college_management.college_root'/>
    <menuitem id="student_manu" name="Student_list" parent='college_management.student_root'
              action="student_action_window"/>
    <menuitem id="student_sub_root" name="Student Form" parent='college_management.student_root'
              action="student_action_form_window"/>
<!--    <menuitem id="student_sub_root1" name="Appointment" parent='college_management.student_root'-->
<!--              action="action_student_appointment_wizard"/>-->
</odoo>

