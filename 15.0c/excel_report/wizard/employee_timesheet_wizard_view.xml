<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record id="views_employee_timeshit_wizard" model="ir.ui.view">
            <field name="name">employee timeshit wizard</field>
            <field name="model">employee.timeshit.wizard</field>
            <field name="arch" type="xml">
                <form string="Parameters">
                    <sheet>
                        <group>
                            <field name="employee_ids" widget="many2many_tags"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="print_excel_report" string="Print" type="object" class="btn-primary" data-hotkey="q"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_employee_timeshit_wizard" model="ir.actions.act_window">
            <field name="name">employee timeshit wizard action</field>
            <field name="res_model">employee.timeshit.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="manu_employee_timeshit_report_wizard"
                  name="Employee Timeshit Report"
                  parent="hr.hr_menu_hr_reports"
                  action="action_employee_timeshit_wizard"/>
    </data>
</odoo>