<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="menu_update_partner_form" model="website.menu">
        <field name="name">Fetch Partner Info</field>
        <field name="url">/partner</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" type="int">40</field>
    </record>
    <template id="update_partner_form" name="Partner Form">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container">
                    <div class="col-md-12">
                        <table class="for_table">
                            <form action="/partner/details">
                                <tr class="for_table">
                                    <td>
                                        <h2 class="update ">Partner Details:</h2>
                                    </td>
                                </tr>
                                <tr>
                                    <td width="30%">
                                        <div class="update">
                                            <label for="name">Partner</label>
                                            <span style="color:#ff0000">*</span>
                                            <select name="partner_id" id="partner_id" class="form-control">
                                                <t t-foreach="partners" t-as="das">
                                                    <option t-esc="das.name" t-att-value="das.id" />
                                                </t>
                                            </select>
                                        </div>
                                    </td>
                                    <td width="70%">
                                        <button type="submit" class="btn btn-primary">Fetch Details</button>
                                    </td>
                                </tr>
                            </form>
                        </table>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="partner_form_success" name="Customer Form details Fetch Successfully">
        <t t-call="website.layout">
            <marquee direction="right" style="background-color:#e581b4">
                <t t-as="title">Partner Details</t>
            </marquee>
            <div class="oe_structure">
                <div class="container">
                    <div class="col-md-12">
                    <table>
                        <form action="/updated/details">
                        <tr>
                            <b>
                                <h2>
                                    <span t-esc="partners.name" style="background-color:#f0b7d4"/>
                                </h2>
                            </b>
                        </tr>
                        <tr bgcolor="pink">
                            <td width="50%">
                                <table border="3">
                                    <center>
                                        <img style="width: 500px; height: 400px;"
                                             t-if="partners.image_1920"
                                             alt="Logo"
                                             t-att-src="image_data_uri(partners.image_1920)"/>
                                    </center>
                                </table>
                            </td>
                            <br></br>
                            <input type="hidden" id="partner_id" name="partner_id" t-att-value="partners.id"/>
                            <td width="10%"></td>
                            <td width="40%">
                                <table>
                                    <center>
                                        <br/>
                                        <tr>
                                            <label for="name" class="">Name:</label>
                                            <input type="char" name="name" t-att-value="partners.name" id="email"
                                                   class="form-control display" placeholder="Edwin Hansen"/>
                                        </tr>
                                        <tr>
                                            <label for="street2" class="">Street:</label>
                                            <input type="char" name="street2" t-att-value="partners.street2"
                                                   id="street2"
                                                   class="form-control display" placeholder="4557 De Silva St"/>
                                        </tr>
                                        <tr>
                                            <label for="name" class="">State:</label>
<!--                                            <input type="char" name="state_id" t-att-value="partners.state_id.name"-->
<!--                                                   id="state_id"-->
<!--                                                   class="form-control for_partner"/>-->
                                            <select name="state_id" id="state_id"  class="form-control for_partner">
                                                <option t-esc="partners.state_id.name" t-att-value="partners.state_id.id" selected="1"/>
                                                <t t-foreach="states" t-as="state">
                                                    <option t-esc="state.name" t-att-value="state.id"/>
                                                </t>
                                            </select>
                                        </tr>
                                        <tr>
                                            <label for="country_id" class="">Country:</label>
                                            <select name="country_id" id="country_id"  class="form-control for_city">
                                                <option t-esc="partners.country_id.name" t-att-value="partners.country_id.id" selected="1"/>
                                                <t t-foreach="countries" t-as="country">
                                                    <option t-esc="country.name" t-att-value="country.id"/>
                                                </t>
                                            </select>
                                        </tr>
                                        <tr>
                                            <label for="name" class="">City:</label>
                                            <input type="char" name="city" t-att-value="partners.city" id="city"
                                                   class="form-control for_contry" placeholder="city"/>
                                        </tr>
                                        <tr>
                                            <label for="name" class="">Email:</label>
                                            <input type="email" name="email" t-att-value="partners.email" id="email"
                                                   class="form-control display" placeholder="email121@gamil.com"/>
                                        </tr>
                                        <tr>
                                            <label for="name" class="">Phone:</label>
                                            <input type="phone" name="phone" t-att-value="partners.phone" id="phone"
                                                   class="form-control display" placeholder="986575625"/>
                                        </tr>
                                        <tr>
                                            <button type="submit" class="btn btn-primary">Submit</button>
                                        </tr>
                                    </center>
                                </table>
                            </td>
                        </tr>
                        </form>
                    </table>
                    <br></br>
                    <br></br>
                    <br></br>
                    <br></br>
                    </div>
                </div>
            </div>
        </t>
    </template>

     <template id="tmp_partner_form_success" name="Customer Form Successfully Submitted">
            <t t-call="website.layout">
                <div id="wrap">
                    <div class="container">
                        <div class="col-md-12">
                            <div class="alert alert-success">
                                Customer created successfully.
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>
</odoo>