<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--    tree view-->
        <record id="rental_tree" model="ir.ui.view">
            <field name="name">rental.management.tree</field>
            <field name="model">rental.management</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="new_name_id"/>
                    <field name="customer_id"/>
                    <field name="start_date"/>
                    <field name="rental_product_id"/>

                </tree>
            </field>
        </record>


        <!--form views-->
        <record id="rental_form" model="ir.ui.view">
            <field name="name">rental.management.form</field>
            <field name="model">rental.management</field>
            <field name="arch" type="xml">

                <form>
                    <header>
                         <button id='button_send_email' string="Send Email" name="action_send_email"
                            class="btn-primary" type="object"/>
                        <field name="state" widget="statusbar"
                               options="{'clickable': '1'}"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="new_name_id"/>
                                <field name="customer_id"/>
                                <field name="rental_type_id"/>
                                <field name="email_id"/>
                                <field name="random_code"/>
                                <button name="generate_cord" string="Generate Code"
                                        type="object" class="btn-primary"/>

                            </group>
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="rental_product_id"/>
                                <field name="rental_user_id"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="price" class="oe_inline" widget='monetary' options="{'currency_field':'currency_id'}"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <!--        search views-->
        <record id="rental_management_search" model="ir.ui.view">
            <field name="name">rental_management</field>
            <field name="model">rental.management</field>
            <field name="arch" type="xml">
                <search string="Rental">
                    <field name="state"/>
                    <separator/>
                    <filter name="state_is_draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                    <filter name="state_is_waiting" string="Waiting" domain="[('state', '=', 'waiting')]"/>
                    <filter name="state_is_approve" string="Approve" domain="[('state', '=', 'approve')]"/>
                    <filter name="state_is_cancel" string="Cancel" domain="[('state', '=', 'cancel')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Name " name="name_id" context="{'group_by':'new_name_id'}"/>
                        <filter string="Customer" name="customer_id" context="{'group_by':'customer_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!--    action views-->
        <record id="rental_action_window" model="ir.actions.act_window">
            <field name="name">rental_management</field>
            <field name="res_model">rental.management</field>
            <field name="view_mode">tree,form,kanban</field>


        </record>
        <record model="ir.actions.act_window" id="rental_management_action_window">
            <field name="name">rental_management_window</field>
            <field name="res_model">rental.management</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="rental_tree"/>
        </record>

        <!--man manu-->
        <menuitem id="rental_root" name="Rental Management"/>

        <!--    manus-->

        <menuitem id="rental_manu" name="Rental Management" parent='rental_root' action="rental_action_window"/>
        <menuitem id="rental_manu1" name="Rental" parent='rental_manu' action="rental_action_window"/>


        <!--    <menuitem id="college_sub" name="Menu 3" parent='college_sub_root' action="college_action_window" />-->
        <!--    <menuitem id="college_sub1" name="Student Form"  parent="college_sub_root" action="action_college_wizard"/>-->
    </data>
</odoo>
