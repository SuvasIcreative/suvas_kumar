                                <!--                                <div class="form-group">-->
                                <div class="s_website_form_rows">
                                    <div class="form-group"
                                         data-type="char" data-name="Field">
                                        <div class="row">
                                            <label for="name"
                                                   class="col-form-label col-sm-auto s_website_form_label">Name:
                                            </label>
                                            <div class="col-sm">
                                                <input type="text" name="name" t-att-value="name" id="name"
                                                       class="form-control" placeholder="Subu"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="s_website_form_rows row s_col_no_bgcolor">
                                    <div class="form-group col-12 s_website_form_field s_website_form_required"
                                         data-type="char" data-name="Field">
                                        <div class="row s_col_no_resize s_col_no_bgcolor">
                                            <label for="email"
                                                   class="col-form-label col-sm-auto s_website_form_label">email:
                                            </label>
                                            <div class="col-sm">
                                                <input type="email" name="email" t-att-value="email" id="email"
                                                       class="form-control" placeholder="email121@gamil.com"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="s_website_form_rows row s_col_no_bgcolor">
                                    <div class="form-group col-12 s_website_form_field s_website_form_required"
                                         data-type="char" data-name="Field">
                                        <div class="row s_col_no_resize s_col_no_bgcolor">
                                            <label for="end_date"
                                                   class="col-form-label col-sm-auto s_website_form_label">End Date:
                                            </label>
                                            <div class="col-sm">
                                                <input type="date" name="end_date" t-att-value="end_date" id="end_date"
                                                       class="form-control"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="s_website_form_rows row s_col_no_bgcolor">
                                    <div class="form-group col-12 s_website_form_field s_website_form_required"
                                         data-type="char" data-name="Field">
                                        <div class="row s_col_no_resize s_col_no_bgcolor">
                                            <label for="end_date"
                                                   class="col-form-label col-sm-auto s_website_form_label">Customer:
                                            </label>
                                            <div class="col-sm">
                                                <select name="customer_id"
                                                        t-attf-class="form-control s_website_form_input" required="1">
                                                    <t t-foreach="partners" t-as="partner">
                                                        <option t-att-value="partner.id">
                                                            <t t-esc="partner.name"/>
                                                        </option>
                                                    </t>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="s_website_form_rows row s_col_no_bgcolor">
                                    <div class="form-group col-12 s_website_form_field s_website_form_required"
                                         data-type="char" data-name="Field">
                                        <div class="row s_col_no_resize s_col_no_bgcolor">
                                            <label for="end_date"
                                                   class="col-form-label col-sm-auto s_website_form_label">Rental
                                                Product:
                                            </label>
                                            <div class="col-sm">
                                                <select name="rental_product_id"
                                                        t-attf-class="form-control s_website_form_input" required="1">
                                                    <t t-foreach="products" t-as="product">
                                                        <option t-att-value="product.id">
                                                            <t t-esc="product.name"/>
                                                        </option>
                                                    </t>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group col-12 s_website_form_submit" data-name="Submit Button">
                                    <div style="width: 200px;" class="s_website_form_label"/>
                                    <button type="submit" class="btn btn-primary">Create</button>
