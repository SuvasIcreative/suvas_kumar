<?xml version= "1.0" encoding= "UTF-8"?>
<odoo>
    <data>
        <template id="rental_web_page" name="Rental Management">
            <t t-call="website.layout">
                <div class="oe_structure">
                    <div class="container">
                        <br/>
                        <center>
                            <h3>Product Details</h3>
                        </center>
                        <br/>
                        <table class="table-striped table">
                            <thead style="font-size: 23px;">
                                <tr>
                                    <h6>
                                        <b>
                                            <th>Icon</th>
                                            <th>Product Name</th>
                                            <th>Sales Price</th>
                                            <th>Cost</th>
                                            <th>
                                                <b>Internal Reference</b>
                                            </th>
                                        </b>
                                    </h6>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="product" t-as="order">
                                    <tr>
                                        <td>
                                            <a t-attf-href="/product/{{ slug(order)}}">
                                                <img style="width: 64px; height: 64px;" t-if="order.image_1920"
                                                     alt="Logo"
                                                     t-att-src="image_data_uri(order.image_1920)"/>
                                            </a>
                                        </td>
                                        <td>
                                            <span t-esc="order.name"/>
                                        </td>
                                        <td>
                                            <span t-esc="order.list_price"/>
                                        </td>
                                        <td>
                                            <span t-esc="order.standard_price"/>
                                        </td>
                                        <td>
                                            <span t-esc="order.default_code"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>
            </t>
        </template>


        <template id="product_templet_web" name="Rental Management">
            <t t-call="website.layout">
                <t t-as="title">Product Templet</t>
                <div class="oe_structure">
                    <div class="container">
                        <br>
                            <center>
                                <h1>Product</h1>
                            </center>
                        </br>
                        <table class="table-striped table">
                            <thead style="font-size: 23px;">
                                <tr>
                                    <td>
                                        <span t-esc="order.name"/>
                                    </td>
                                </tr>
                                <tr>
                                    <table border="3">
                                        <tr>
                                            <td width="60%">
                                                <center>
                                                    <img style="width: 250px; height: 250px;" t-if="order.image_1920"
                                                         alt="Logo"
                                                         t-att-src="image_data_uri(order.image_1920)"/>
                                                </center>
                                            </td>
                                        </tr>
                                    </table>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>


