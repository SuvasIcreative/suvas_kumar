<?xml version= "1.0" encoding= "UTF-8"?>
<odoo>
    <data>
        <template id="rental_web_page" name="Rental Management">
            <t t-call="website.layout">
                <div class="oe_structure">
                    <div class="container">
                        <br/>
                        <center>
                            <h3>Product Details</h3>
                        </center>
                        <br/>
                        <table class="table-striped table">
                            <thead style="font-size: 23px;">
                                <tr>
                                    <h6>
                                        <b>
                                            <th>Icon</th>
                                            <th>Product Name</th>
                                            <th>Sales Price</th>
                                            <th>Cost</th>
                                            <th>
                                                <b>Internal Reference</b>
                                            </th>
                                        </b>
                                    </h6>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="product" t-as="order">
                                    <tr>
                                        <td>
                                            <a t-attf-href="/product/{{ slug(order)}}">
                                                <img style="width: 64px; height: 64px;"
                                                     t-if="order.image_1920"
                                                     alt="Logo"
                                                     t-att-src="image_data_uri(order.image_1920)"/>
                                            </a>
                                        </td>
                                        <td>
                                            <span t-esc="order.name"/>
                                        </td>
                                        <td>
                                            <span t-esc="order.list_price"/>
                                        </td>
                                        <td>
                                            <span t-esc="order.standard_price"/>
                                        </td>
                                        <td>
                                            <span t-esc="order.default_code"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>
            </t>
        </template>

        <template id="product_templet_web" name="Rental Management">
            <t t-call="website.layout">
                <t t-as="title">Product Templet</t>
                <div class="oe_structure">
                    <div class="container">
                        <table>
                            <thead style="font-size: 23px;">
                                <tr>
                                    <marquee direction="right" style="background-color:#e581b4">
                                        <b>
                                            <h1>Product</h1>
                                        </b>
                                    </marquee>
                                </tr>
                            </thead>
                            <tr>
                                <b>
                                    <h2>
                                        <span t-esc="order.name" style="background-color:#f0b7d4"/>
                                    </h2>
                                </b>
                            </tr>
                            <tr bgcolor="pink">
                                <td width="50%">
                                    <table border="3">
                                        <center>
                                            <img style="width: 500px; height: 400px;"
                                                 t-if="order.image_1920"
                                                 alt="Logo"
                                                 t-att-src="image_data_uri(order.image_1920)"/>
                                        </center>
                                    </table>
                                </td>
                                <br></br>
                                <td width="10%"></td>
                                <td width="40%">
                                    <table>
                                        <center>
                                            <tr>
                                                <b>
                                                    <h2>Name:
                                                        <span t-esc="order.name"/>
                                                    </h2>
                                                </b>
                                            </tr>
                                            <br/>
                                            <tr>

                                                <h4>Price:$
                                                    <span t-esc="order.list_price"/>
                                                </h4>
                                            </tr>
                                            <br/>
                                            <tr>
                                                <h4>Sales Price
                                                    :$
                                                    <span t-esc="order.standard_price"
                                                          style="background-color:#a6eca6"/>
                                                </h4>
                                            </tr>
                                            <br></br>
                                            <tr>
                                                <h4>Internal Reference:
                                                    <span t-esc="order.default_code"/>
                                                </h4>
                                            </tr>
                                            <br></br>
                                            <tr>
                                                <h4>Product Category:
                                                    <span t-esc="order.categ_id.name"/>
                                                </h4>
                                            </tr>
                                        </center>
                                    </table>
                                </td>
                            </tr>
                        </table>
                        <br></br>
                        <br></br>
                        <br></br>
                        <br></br>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>
