<?xml version= "1.0" encoding= "UTF-8"?>
<odoo>
    <record id="view_account_move_inherit_form_modify" model="ir.ui.view">
        <field name="name">view account move inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']//tree" position="inside">
               <field name="delivery_address_id" optional="hide"/>
               <field name="vendor" optional="hide"/>
               <field name="vendor_price" optional="hide"/>
               <field name="planned_gp" optional="hide"/>
               <field name="description" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>
