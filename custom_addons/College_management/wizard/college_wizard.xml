<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="views_college_wizard" model="ir.ui.view">
        <field name="name">college management wizard</field>
        <field name="model">college.management.wizard</field>
        <field name="arch" type="xml">
            <form string="Parameters">

                <group>
                    <group>
                        <field name="first_name"/>
                        <field name="last_name"/>
                        <field name="enrollment_number"/>

                    </group>
                    <group>
                        <field name="address"/>
                        <field name="mobile_no"/>
                        <field name="course"/>
                        <field name="email"/>

                    </group>


                </group>

                <footer>
                    <button name="college" string="Save" type="object" class="btn-primary"
                            data-hotkey="q"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_college_wizard" model="ir.actions.act_window">
        <field name="name">College Management</field>
        <field name="res_model">college.management.wizard</field>
<!--        <field name="view_id" ref="views_college_wizard"/>-->
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!--    <menuitem name="submenu1" id="menu_procurement_compute" parent="college_sub"-->
    <!--              action="action_college_wizard"/>-->

</odoo>
