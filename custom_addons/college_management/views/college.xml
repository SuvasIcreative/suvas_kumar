    <!--form views-->
    <record id="college_form" model="ir.ui.view">
        <field name="name">college.management.form</field>
        <field name="model">college.management</field>
        <field name="arch" type="xml">
            <form>
                <!--                <header>-->
                <!--                    <button name="name" string="Send" type="object"/>-->
                <!--                </header>-->
                <sheet>
                    <group>
                        <group>
                            <field name="name" widget="url"/>
                            <field name="address"/>
                            <field name="rating" widget="priority"/>

                        </group>
                        <group>
                            <field name="code"/>
                            <field name="email" widget="email"/>
                            <field name="course"/>

                        </group>


                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--    action views-->

    <record id="college_action_window" model="ir.actions.act_window">
        <field name="name">college</field>
        <field name="res_model">college.management</field>
        <field name="view_mode">tree,form,kanban</field>

    </record>
    <record id="college_action_window1" model="ir.actions.act_window">
        <field name="name">college</field>
        <field name="res_model">college.management</field>
        <field name="view_mode">tree,form</field>

    </record>

