<odoo>
    <!--    tree view-->
    <record id="college_tree" model="ir.ui.view">
        <field name="name">college.management.tree</field>
        <field name="model">college.management</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="course"/>
                <field name="email"/>
                <field name="address"/>
                <field name="code"/>

            </tree>
        </field>
    </record>

