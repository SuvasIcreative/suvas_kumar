<odoo>
    <!--    tree view-->
    <record id="college_registration_tree" model="ir.ui.view">
        <field name="name">college_registration_tree</field>
        <field name="model">college.registration</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="email"/>
                <field name="address"/>
                <field name="code"/>
                <field name="available_course"/>
                <field name="student_count"/>
            </tree>
        </field>
    </record>

