    <!--form views-->
    <record id="college_registration_form" model="ir.ui.view">
        <field name="name">college_registration_form</field>
        <field name="model">college.registration</field>
        <field name="arch" type="xml">
            <form>
                <!--                <header>-->
                <!--                    <button name="name" string="Send" type="object"/>-->
                <!--                </header>-->
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_available_student" type="object"
                                class="oe_stat_button" icon="fa-user">
                            <div class="o_stat_info">
                                <field name="student_count" class="o_stat_value"/>
                                <span class="o_stat_text">Students</span>
                            </div>
                        </button>

                    </div>
                    <group>
                        <group>
                            <field name="name" widget="url"/>
                            <field name="address"/>
                            <field name="student_count"/>

                            <field name="rating" widget="priority"/>

                        </group>
                        <group>
                            <field name="code"/>
                            <field name="email" widget="email"/>
<!--                            <field name="course_count"/>-->
                            <field name="available_course"/>
                        </group>


                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--    action views-->

    <record id="college_registration_action_window" model="ir.actions.act_window">
        <field name="name">college_registration</field>
        <field name="res_model">college.registration</field>
        <field name="view_mode">tree,form,kanban</field>

    </record>

    <!--man manu-->
