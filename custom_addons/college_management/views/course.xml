<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    tree view-->
    <record id="unv_course_tree" model="ir.ui.view">
        <field name="name">unv_course_tree</field>
        <field name="model">unv.course</field>
        <field name="arch" type="xml">
            <tree>
                <field name="course_name"/>
                <field name="course_code"/>
            </tree>
        </field>
    </record>


    <!--form views-->
    <record id="unv_course_form" model="ir.ui.view">
        <field name="name">unv_course_form</field>
        <field name="model">unv.course</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="course_name"/>
                        </group>
                        <group>
                            <field name="course_code"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--    action views-->

    <record id="unv_course_action_window" model="ir.actions.act_window">
        <field name="name">unv_course</field>
        <field name="res_model">unv.course</field>
        <field name="view_mode">tree,form,kanban</field>

    </record>

    <!--man manu-->
<!--    <menuitem id="unv_course" name="Course"/>-->

    <!--    manus-->

    <menuitem id="course_menu" name="Course" parent="college_root" action="unv_course_action_window" />

</odoo>
