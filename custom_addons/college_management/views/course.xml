    <!--    kanban views-->


    <record id="view_course_kanban" model="ir.ui.view">
<field name="name">course.kanban.view</field>
<field name="model">unv.course</field>
<field name="arch" type="xml">
    <kanban>
        <field name="id"/>
        <field name="course_name"/>
        <field name="course_code"/>
<!--        <field name="gender"/>   -->
<!--        <field name="student_dob"/>        -->
        <field name="file"/>
        <templates>
            <t t-name="kanban-box">
                <div t-attf-class="oe_kanban_global_click">
                    <div class="o_kanban_image">
                        <img alt="Avatar"
                             t-att-src="kanban_image('unv.course', 'file',record.id.raw_value)"/>
                    </div>
                    <div class="oe_kanban_details">
                        <t class="o_kanban_record_title">
                            <strong t-esc="record.course_name.value"/>
                        </t>
                        <div t-if="record.course_code.value">
                            <t t-esc="record.course_code.value"/>
                        </div>
<!--                        <div t-if="record.gender.value">         -->
<!--                            <t t-esc="record.gender.value"/>         -->
<!--                        </div> -->
                    </div>
                </div>
            </t>
        </templates>
    </kanban>
</field>
</record>


    <!--form views-->
    <record id="unv_course_form" model="ir.ui.view">
        <field name="name">unv_course_form</field>
        <field name="model">unv.course</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="file" widget="image" class="oe_avatar"
                           options="{&quot;preview_image&quot;: &quot;avatar_128&quot;}"/>
                    <group>
                        <group>
                            <field name="course_name"/>

                        </group>
                        <group>
                            <field name="course_code"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--    action views-->

    <record id="unv_course_action_window" model="ir.actions.act_window">
        <field name="name">Course</field>
        <field name="res_model">unv.course</field>
        <field name="view_mode">form,kanban</field>
<!--        <field name="view_id" ref="view_course_kanban"/>-->


    </record>
    <record id="unv_course_action_for_from_window" model="ir.actions.act_window">
        <field name="name">unv_course_form</field>
        <field name="res_model">unv.course</field>
        <field name="view_mode">form,kanban</field>
        <field name="view_id" ref="unv_course_form"/>


    </record>

    <!--man manu-->
