    <!--    manus-->

    <menuitem id="course_menu" name="Course" parent="college_root" action="unv_course_action_window"/>
        <menuitem id="course_menu1" name="Course Form" parent="course_menu" action="unv_course_action_for_from_window"/>

    <menuitem id="course_menu2" name="Courses" parent="course_menu" action="unv_course_action_window"/>
</odoo>









