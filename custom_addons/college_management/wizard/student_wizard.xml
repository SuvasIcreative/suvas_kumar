<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_procurement_compute_wizard" model="ir.ui.view">
        <field name="name">student management wizard</field>
        <field name="model">student.management.wizard</field>
        <field name="arch" type="xml">
            <form string="Parameters">
                <p>
                    The stock will be reserved for operations waiting for availability and the reordering rules will be
                    triggered.
                </p>
                <footer>
                    <button name="procure_calculation" string="Run Scheduler" type="object" class="btn-primary"
                            data-hotkey="q"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_student_wizard" model="ir.actions.act_window">
        <field name="name">student_management_wizard</field>
        <field name="res_model">student.management.wizard</field>
<!--        <field name="view_id" ref="view_procurement_compute_wizard"/>-->
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem name="submenu" id="menu_procurement_compute" parent="student_root"
              action="action_student_wizard"/>


</odoo>
