<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--    tree view-->
        <record id="rental_type_tree" model="ir.ui.view">
            <field name="name">rental.type.tree</field>
            <field name="model">rental.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>
        <!--form views-->
        <record id="rental_type_form" model="ir.ui.view">
            <field name="name">rental.type.form</field>
            <field name="model">rental.type</field>
            <field name="arch" type="xml">
                <form>

                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                            </group>
                            <group>
                                <field name="description"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
<!--        search views-->
        <record id="rental_type_search" model="ir.ui.view">
        <field name="name">rental_type_search</field>
        <field name="model">rental.type</field>
        <field name="arch" type="xml">
            <search string="name">
                <field name="code"/>
                <field name="description"/>
                <separator/>
<!--                <filter string="Name" name="name" domain="[('name', '=', name)]"/>-->
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Name" name="name" context="{'group_by':'name'}"/>
                    <filter string="Code" name="code" context="{'group_by':'code'}"/>
                </group>
            </search>
        </field>
    </record>

<record model="ir.actions.act_window" id="rental_type_action_window">
            <field name="name">rental_type_window</field>
            <field name="res_model">rental.type</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="rental_type_tree"/>
        </record>
        <!--man manu-->
          <menuitem id="rental_type_manu" name="Rental Type" parent='rental_root'
                  action="rental_type_action_window"/>
    </data>
</odoo>
